    async function fetchdata(id)
    {
        var res=await fetch('/fetchvehicle/'+id);
        res=await res.json();
        var records=res.records;
        var html=``;
        for(var x of records)
        {
            html+=`<div class="swiper-slide">
                                <a href="/single_veh/${x.id}" style="color:black;">
