    });
    async function fetchReview()
    {
        var res=await fetch('/fetchreviews');
        res=await res.json();
        var records=res.records;
         console.log(records);
        var html=``;
        for(var x of records)
        {
            html+=`<div class="swiper-slide">
                                <div class="testimonial-item">
                                    <div class="testimonial-header">
                                        <div class="testimonial-rating">`
                                           for(var i=1; i<=x.rating; i++)
                                           {
                                                html+=` <i class="fa-solid fa-star"></i>`;
                                           }
                                           for(var i=1; i<=5-x.rating; i++)
                                           {
                                               html+=` <i class="fa-regular fa-star"></i>`;
                                           }
                                        html+=`</div>
                                        <div class="testimonial-content">
                                            <h5>${x.user.first_name} ${x.user.last_name}</h5>
                                            <p> ${x.feedback}</p>
                                        </div>
                                    </div>
                                    <div class="testimonial-body">
                                        <div class="author-image">
                                            <figure class="image-anime">
                                                <img src="${x.vehicle.car_photo}" alt="">
                                            </figure>
                                        </div>
                                        <div class="author-content">
                                            <h3>${x.vehicle.name} </h3>
                                            <p>${x.vehicle.vehicle_model}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>`;
        }
        document.getElementById("reviews").innerHTML=html;
    }
</script>
